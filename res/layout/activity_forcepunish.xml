<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:background="#D6D6D6">

     <Button
         android:id="@+id/btnforcevehicle"
         android:layout_width="120dp"
         android:layout_height="122dp"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="15dp"
         android:background="@drawable/vehicle_selector" 
         android:onClick="OnClickForceVehicle"
         />
     <Button
         android:id="@+id/btnforcenvehicle"
         android:layout_width="120dp"
         android:layout_height="122dp"
       	 android:layout_alignTop="@+id/btnforcevehicle"
         android:layout_alignParentRight="true"
         android:layout_marginRight="15dp"
         android:background="@drawable/nvehicle_selector"  
         android:onClick="OnClickForceNvehicle"     
         />
     <Button
         android:id="@+id/btnforcenotification"
         android:layout_width="120dp"
         android:layout_height="122dp"
       	 android:layout_below="@+id/btnforcevehicle"
         android:layout_alignLeft="@+id/btnforcevehicle"
         android:layout_marginTop="15dp"
         android:background="@drawable/notification_selector" 
         android:onClick="OnClickForceNotification"     
         />
</RelativeLayout>

</LinearLayout>